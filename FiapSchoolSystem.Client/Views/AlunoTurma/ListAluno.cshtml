@model IEnumerable<AlunoViewModel>

<br />
<br />
<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">Lista de Alunos</h1>
        </div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Nome
                </th>
                <th>
                    Usuário
                </th>
                <th>
                    Senha
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.Nome
                    </td>
                    <td>
                        @item.Usuario
                    </td>
                    <td>
                        @item.Senha
                    </td>
                    <td>
                        <a asp-action="DeleteRelationship" class="btn btn-danger" asp-route-id="@item.Id" asp-route-turma_id="@ViewContext.RouteData.Values["id"].ToString()">
                            <i class="fas fa-trash"> Inativar Relacionamento</i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
   
     <div class="col text-end pt-1">
            <a asp-action="Index" class="btn btn-outline-primary"> Voltar </a>
     </div>
</div>

