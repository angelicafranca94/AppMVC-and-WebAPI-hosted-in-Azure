@model FiapSchoolSystem.Client.Models.AlunoTurmaViewModel


<form asp-action="DeleteRelatioship">
	<input asp-for="Turma_Id" hidden />
	  <br />
    <div class="container border p-3">
        <h1 class="text-primary">Atualizar relacionamento entre aluno e turma</h1>

        <hr />
        <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Turma</label>
            </div>
            <div class="col-10 pb-3">

                <select class="form-select-sm" asp-for="Turma_Id"
                        asp-items="new SelectList(@Model.Turmas, nameof(TurmaViewModel.Id),
                   nameof(TurmaViewModel.Nome))">

                </select>
            </div>

            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Aluno</label>
            </div>
            <div class="col-10 pb-3">

                 <select class="form-select-sm" asp-for="Aluno_Id"
                        asp-items="new SelectList(@Model.Alunos, nameof(AlunoViewModel.Id),
                   nameof(AlunoViewModel.Nome))">
                    <option>Please Select</option>
                </select>
            </div>

            <div class="col-5 offset-2">
                <a asp-action="Index" class="btn-primary btn form-control ">Voltar</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Salvar" class="btn btn-success form-control" />
            </div>
        </div>
        <div>
        </div>
    </div>
</form>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}