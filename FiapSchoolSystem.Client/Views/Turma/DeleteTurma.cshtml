@model FiapSchoolSystem.Client.Models.TurmaViewModel


<form asp-action="DeleteTurma">
	<input asp-for="Id" hidden />
	<br />
	<div class="container border p-3">
		<h1 class="text-primary">Remover Turma</h1>

		<hr />
		<div class="row">
			<div class="col-2">
				<label asp-for="Curso_Id" class="control-label pt-2" style="font-size:20px;"></label>
			</div>
			<div class="col-10 pb-3">
				<input asp-for="Curso_Id" disabled class="form-control" />
			</div>
			<div class="col-2">
				<label asp-for="Nome" class="control-label pt-2" style="font-size:20px;"></label>
			</div>
			<div class="col-10 pb-3">
				<input asp-for="Nome" disabled class="form-control" />
			</div>
			<div class="col-2">
				<label asp-for="Ano" class="control-label pt-2" style="font-size:20px;"></label>
			</div>
			<div class="col-10 pb-3">
				<input asp-for="Ano" disabled class="form-control" />
			</div>
			<div class="col-5 offset-2">
				<a asp-action="Index" class="btn-primary btn form-control ">Voltar</a>
			</div>
			<div class="col-5">
				<input type="submit" value="Remover" class="btn btn-danger form-control" />
			</div>
		</div>
		<div>
		</div>
	</div>
</form>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}